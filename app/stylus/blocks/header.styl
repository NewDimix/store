.header
	&__line-top
		display flex
		justify-content space-between
		align-items center
		@media (min-width 768px)
			align-items flex-start
		@media (min-width 992px)
			align-items center
	&__logo
		display inline-block
		z-index 2
		h1
			margin 10px 0
		img
			width 200px
			@media (min-width 768px)
				width auto
			@media (min-width 992px)
				margin-top 15px
	&__cart
		display inline-block
		margin-right 20px
		@media (min-width 768px)
			margin-top 27px
		@media (min-width 992px)
			margin-top -45px
	&__search
		display none
		@media (min-width 768px)
			display block
			text-align right
			margin-top -70px
		@media (min-width 992px)
			text-align center
			margin-top -130px
	&__line-bottom
		z-index 1
		position relative
		@media (min-width 480px)
			margin 0 -20px
		@media (min-width 768px)
			margin-top 10px
			border-top 1px solid #ccc
			border-bottom 1px solid #ccc
		@media (min-width 992px)
			margin-top 30px
	&__menu
		@media (min-width 992px)
			margin-left 270px
			margin-right 220px
	&__social
		display none
		text-align right
		position absolute
		top 16px
		right 12px
		@media (min-width 992px)
			display block
		img
			width 40px
			margin-right 10px
			