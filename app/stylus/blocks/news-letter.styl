.news-letter
	background-color #2e1153
	color white
	padding 20px 0
	@media (min-width 992px)
		text-align right
	&__desc
		padding-left 15px
		@media (min-width 992px)
			float left
			padding-left 25px
	&__title
		font-size 30px
		font-weight 800
		text-transform uppercase
		margin 0
		margin-bottom 5px
		@media (min-width 992px)
			text-align left
	&__text
		font-size 12px
		font-weight 400
		margin 0
	&__input-wrap
		margin 0 auto
		width 90%
		margin-top 20px
		margin-bottom 15px
		position relative
		@media (min-width 480px)
			display inline-block
			width 60%
			margin 20px 15px 0
		@media (min-width 992px)
			width 38%
			margin-top 7px
			margin-bottom 5px
	&__input-icon
		position absolute
		top 50%
		transform translatey(-50%)
		left 15px
		vertical-align top
	&__input
		font-size 15px
		border none
		background-color white
		width 100%
		height 45px
		box-sizing border-box
		outline none
		border-radius 5px
		padding-left 45px
	&__btn
		display block
		font-size 15px
		height 45px
		padding 0 14px
		text-transform uppercase
		background-color #88d317
		font-weight 800
		border none
		border-radius 5px
		color white
		margin 0 auto
		trans()
		&:hover
			cursor pointer
			background-color lightness(#88d317, 40%)
		&:active
			transform scale(.95)
		@media (min-width 480px)
			display inline-block
		@media (min-width 992px)
			margin-right 25px