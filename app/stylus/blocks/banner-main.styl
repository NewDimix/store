.banner-main
	background url(../img/shopAll__back.png) 100% no-repeat
	background-size cover
	overflow hidden
	position relative
	@media (min-width 992px)
		height 460px
	&__border
		text-align center
		@media (min-width 992px)
			border 5px solid white
			width 80%
			height 200px
			padding-left 40px
			text-align left
			line-height 70px
			position absolute
			top 50%
			left 4%
			transform translatey(-50%)
	&__text
		font-size 10vw
		font-weight 800
		color white
		text-transform uppercase
		margin-top 0
		margin-bottom 0
		text-align center
		@media (min-width 768px)
			font-size 70px
		@media (min-width 992px)
			position absolute
			transform translatey(-50%)
			top 50%
			left 70px
			z-index 9
			text-align left
	&__btn
		display block
		color white
		font-size 12px
		font-weight 800
		text-transform uppercase
		background-color #88d317
		border-radius 0
		padding 11px 38px
		margin 20px auto
		position relative
		border none
		&:hover
			background-color #70ac17
			cursor pointer
			color white
		@media (min-width 992px)
			margin 0
			position absolute
			bottom -20px
	&__images
		position relative
		width 232px
		height 300px
		margin 10px auto 0
		@media (min-width 480px)
			height 350px
			width 300px
		@media (min-width 992px)
			position absolute
			right 0
	&__img1
		display none
		position absolute
		top -20px
		left -40px
		filter drop-shadow(16px 8px 10px rgba(0, 0, 0, 0.7))
		z-index 1
		@media (min-width 480px)
			display block
		@media (min-width 992px)
			top auto
			left auto
			right 10px
	&__img2
		position absolute
		bottom -15px
		left -30px
		filter drop-shadow(16px 8px 10px rgba(0, 0, 0, 0.7))
		z-index 3
		@media (min-width 480px)
			left 80px
			bottom -20px
		@media (min-width 992px)
			left auto
			right 100px
			bottom -40px
	&__img3
		position absolute
		filter drop-shadow(16px 8px 10px rgba(0, 0, 0, 0.7))
		z-index 2
		@media (min-width 480px)
			left 100px
			top 50px
		@media (min-width 992px)
			left auto
			right 150px
			top 65px