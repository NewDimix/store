menu__icon()
	cursor pointer
	border-radius 1px
	height 3px
	width 25px
	background white
	position absolute
	display block
	content ''
	transition all .2s ease .2s, transform .2s ease 0s

.menu
	position relative
	&__btn
		width 100%
		background-color #2e1153
		width 100%
		text-align left
		position relative
		cursor pointer
		user-select none
		@media (min-width 768px)
			display none
		&.open
			.menu__icon
				background transparent
				&:before
					transform rotate(45deg)
					top 0
					transition all .2s ease 0s, transform .2s ease .2s
				&:after
					transform rotate(-45deg)
					bottom 0
					transition all .2s ease 0s, transform .2s ease .2s
	&__icon
		position: absolute;
		top 50%
		left 10px
		transform translatey(-50%)
		menu__icon()
		&:before, &:after
			menu__icon()
		&:before
			top 8px
		&:after
			bottom 8px
	&__title
		color white
		margin-left 45px
		line-height 40px
		text-transform uppercase
		font-size 18px
		font-weight 700
	&__ul
		list-style none
		margin 0
		padding 0
		position relative
		top 100%
		left 0
		width 100%
		background-color lightness(#2e1153, 30%)
		z-index 9999
		max-height 0
		overflow hidden
		transition all .4s ease-out 0s
		&.open
			max-height 390px
		@media (min-width 768px)
			position static
			background-color transparent
			display flex
			justify-content space-around
			align-items center
			max-height 50000px
		li 
			display block
			margin 0
			box-sizing border-box
			&.menu__search
				padding 10px 0 17px 19px
				@media (min-width 768px)
					display none
			@media (min-width 768px)
				display inline-block
				padding 0
			a 
				display inline-block
				width 100%
				font-size 18px
				font-weight 700
				text-transform uppercase
				color #fff
				text-decoration none
				padding 17px
				@media (min-width 768px)
					padding 17px 0
				&:hover
					text-decoration underline
				@media (min-width 768px)
					color #2b383e
				&.active
				a 
					font-weight 700