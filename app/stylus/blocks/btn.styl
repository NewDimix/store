.btn-blue
    display inline-block
    text-align center
    color #fff
    background-color #2a65a6
    border 0
    text-transform uppercase
    text-decoration none
    padding 10px 6px
    transition background-color 300ms ease-out
    box-sizing border-box
    &:hover
        color #fff
        background-color #1d5390
        text-decoration none    
    @media (min-width 768px)
        padding 10px 28px
.btn-orange
    display inline-block
    text-align center
    color #fff
    background-color #f69d0e
    border 0
    text-transform uppercase
    text-decoration none
    padding 10px 6px
    transition background-color 300ms ease-out
    box-sizing border-box
    &:hover
        color #fff
        background-color #e08f0d
        text-decoration none    
    @media (min-width 768px)
