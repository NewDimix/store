.cart
	white-space nowrap
	&__text
		display none
		margin 0
		font-family Raleway
		color #999
		font-size 12px
		font-weight 600
		@media (min-width 480px)
			display inline-block
	&__icon
		display inline-block
		position relative
		trans()
		&:hover
			transform scale(1.075)
		&:active
			transform scale(.95)
		@media (min-width 480px)
			margin-left 10px
		img
			width 33px
			vertical-align middle
	&__counter
		position absolute
		top -15px
		right -20px
		width 28px
		font-size 12px
		line-height 28px
		color white
		text-align center
		border-radius 50%
		border 1px solid #ccc
		background-color #88d317