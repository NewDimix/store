.container
	width 100%
	max-width 1300px
	padding 0
	box-sizing border-box
	margin 0 auto
	font-size 0
	@media (min-width 480px)
		padding 0 20px

.banners-top
	padding 30px 0
	&__main
		margin-bottom 20px
		@media (min-width 992px)
			margin-bottom 0
			display inline-block
			width 73%
			margin-right 2%
	&__side
		@media (min-width 992px)
			display inline-block
			width 25%
		
categories-grid()
	margin-bottom 20px
	@media (min-width 480px)
		display inline-block
		width 49%
		margin-right 2%
	@media (min-width 992px)
		width 23.5%
		margin-bottom 0
			
.categories
	padding 30px 0
	&__mens
		categories-grid()
	&__womens
		categories-grid()
		@media (min-width 480px)
			margin-right 0
		@media (min-width 992px)
			margin-right 2%
	&__kids
		categories-grid()
		@media (min-width 480px)
			margin-bottom 0
	&__access
		categories-grid()
		margin-bottom 0
		@media (min-width 480px)
			margin-right 0

.best-sellers
	padding 30px 0 0
	&__title
		color #272727
		font-size 40px
		font-weight 800
		text-transform uppercase
		margin 0
		margin-bottom 20px
	&__product
		margin-bottom 50px
		@media (min-width 768px)
			display inline-block
			width 49%
			margin-right 2%
		@media (min-width 1200px)
			width 23.5%
			margin-bottom 0
		&:nth-of-type(2n)
			@media (min-width 768px)
				margin-right 0
			@media (min-width 1200px)
				margin-right 2%
		&:last-of-type
			margin-bottom 0
			@media (min-width 1200px)
				margin-right 0
				
.banners-bottom
	padding 30px 0
	&__banner-size
		margin-bottom 20px
		@media (min-width 768px)
			vertical-align top
			display inline-block
			width 49%
			margin-right 2%
			margin-bottom 0
	&__banner-sale
		@media (min-width 768px)
			display inline-block
			width 49%